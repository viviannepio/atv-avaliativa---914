import javax.swing.JOptionPane;
public class PrincipalCalculadora{
    public static void main( String args[] ){
        int numr1, numr2;
        String numrx, numry;
        numrx = JOptionPane.showInputDialog( null, "Digite o primeiro número:", 
        "Primeiro número", JOptionPane.QUESTION_MESSAGE );
        numr1 = Integer.parseInt( numrx );
        numry = JOptionPane.showInputDialog( null, "Digite o segundo número:", 
        "Segundo número", JOptionPane.QUESTION_MESSAGE );
        numr2 = Integer.parseInt( numry );
        // instanciação de um objeto da classe calculadora
        Calculadora calc = new Calculadora();
        JOptionPane.showMessageDialog(null, "somar: " +  calc.somar( numr1, numr2 ) );
               JOptionPane.showMessageDialog(null, "subtrair: " +   calc.subtrair( numr1, numr2 ) );
        JOptionPane.showMessageDialog(null, "multiplicar: " +  calc.multiplicar(
numr1, numr2 ) );
               JOptionPane.showMessageDialog(null,  "dividir: "  +    calc.dividir( numr1, numr2 ) );
        System.exit( 0 );
    }
}
